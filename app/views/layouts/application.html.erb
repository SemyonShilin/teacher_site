<!DOCTYPE html>
<html>
  <head>
    <title>TeacherSite</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <%= render 'layouts/header' %>
    <div class="container">
      <% flash.each do |key, value| %>
          <div class="alert alert-danger">
            <%= value %>
          </div>
      <% end %>
      <%= yield %>
    </div>

    <%= render 'layouts/footer' %>
  </body>
</html>
